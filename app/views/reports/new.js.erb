<% if user_signed_in? %>
var message = "<%= j render :partial => 'form', locals: {report: @report} %>";
message = message.replace(/(?:\r\n|\r|\n)/g, '');
var modal = "<%= j render :partial => 'shared/modal_submit', locals: {title: t(:add_new_report), submit_id: 'submit_add_report_btn'} %>";
modal = modal.replace(/(?:\r\n|\r|\n)/g, '');
$("body").append(modal);
$(".modal-body").html(message);
$("#park-modal").modal({
    backdrop: 'static',
    keyboard: false
});
<% end %>